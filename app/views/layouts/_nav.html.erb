<div class="row mt-2">
  <div class="col-1">
    <%= link_to root_path do %>
      <i class="bi bi-journals"></i>
    <% end %>
  </div>
  <div class="col-6"></div>
  <div class="col-5">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path, class: "text-dark text-decoration-none me-4" do %>
        <small class="text-white">
          <%= current_user.email %>
        </small>
      <% end %>
      <%= link_to t('posts.title'), new_post_path, class: "text-primary me-3" %>
      <%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: "text-danger" %>
    <% else %>
      <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "text-success me-2" %>
      <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path, class: "text-primary" %>
    <% end %>
    <span class="ms-3 border rounded p-2">
      <% I18n.available_locales.each do | locale | %>
        <%= link_to t(locale), url_for(locale: locale, only_path:  true) %> 
      <% end %>
    </span>
  </div>
</div>
<hr>
