<div class="row mt-2">
  <div class="col-1">
    <%= link_to root_path do %>
      <i class="bi bi-journals"></i>
    <% end %>
  </div>
  <div class="col-9"></div>
  <div class="col-2">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path, class: "text-dark text-decoration-none me-4" do %>
        <small class="text-white">
          <%= current_user.email %>
        </small>
      <% end %>
      <%= link_to 'Create Post', new_post_path, class: "text-primary" %>
      <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-danger" %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: "text-success me-2" %>
      <%= link_to 'Sign up', new_user_registration_path, class: "text-primary" %>
    <% end %>
  </div>
</div>
<hr>
